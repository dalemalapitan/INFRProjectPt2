<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Task</label>
                    <input type="text" class="form-control" id="nameTextField" placeholder="Enter the Task" name="Name" required>
                </div>
                <div class="form-group">
                    <label for="authorTextField">Description</label>
                    <input type="text" class="form-control" id="authorTextField" placeholder="Enter the Description" name="Author" required>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Priority</label>
                    <input type="text" class="form-control" id="publishedTextField" placeholder="Enter the Priority Level" name="Published" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Status</label>
                    <input type="text" class="form-control" id="descriptionTextArea"  placeholder="enter the Status Level" name="Description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="priceTextField">Due Date</label>
                    <input type="text" class="form-control" id="priceTextField" placeholder="Due Date" name="Price" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <button class="btn btn-warning" type="submit">Cancel
                    <i class="fas fa-undo"></i></button>    
            </form>
        </div>
    </div>
</div>
