<%- include ../Partials/header.ejs%>
<%- include ../Partials/main_nav.ejs%>
<!--Content for Add Page-->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="titleTextField">Task</label>
                    <input type="text" class="form-control" id="titleTextField" placeholder="Enter the Task" name="Title" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextField">Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextField" placeholder="Enter the Description" name="Description" required></textarea>
                </div>
                <div class="form-group">
                    <label for="priorityTextField">Priority</label>
                    <input type="text" class="form-control" id="priorityTextField" placeholder="Enter the Priority Level" name="Priority" required>
                </div>
                <div class="form-group">
                    <label for="statusTextArea">Status</label>
                    <input type="text" class="form-control" id="statusTextArea"  placeholder="enter the Status Level" name="Status" required>
                </div>
                <div class="form-group">
                    <label for="duedateTextField">Due Date</label>
                    <input type="text" class="form-control" id="duedateTextField" placeholder="Due Date" name="dueDate" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit
                <i class="fas fa-edit"></i></button>  
                <a href="/todoList" class="btn btn-warning">Cancel
                <i class="fas fa-undo"></i></a> <!-- directs to list page-->   
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs%>